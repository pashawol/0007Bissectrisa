mixin s-rews()
	// start s-rews
	+b.SECTION.s-rews.section.lazy-background#s-rews&attributes(attributes)
		+e.head.container
			+b.section-title
				+e.H2.sm ОТЗЫВЫ
				+e.lg  ОТЗЫВЫ
			.title Мы ценим Ваше мнение
				span.text-primary .
		+e.body
			.container
				+e.slider-wrap
					+e.slider--js
						mixin item(t,p)
							+e.slide
								+e.item
									+e.head-slide
										.row
											+e.title.col= t
											.col-auto
												+b.star-block
													+icon('star',' star-active')
													+icon('star',' star-active')
													+icon('star',' star-active')
													+icon('star',' star-active')
													block
									+e.caption
										p= p
